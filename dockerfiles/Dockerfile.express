# -----------------------------------------
# Base image
# -----------------------------------------
FROM node:20-alpine AS base

WORKDIR /app

# Create user (non-root for security)
RUN addgroup -S app && adduser -S app -G app

# -----------------------------------------
# Install deps first (cache layer)
# -----------------------------------------
COPY package*.json ./
RUN npm install

# -----------------------------------------
# Copy application
# -----------------------------------------
COPY . .

# Switch to non-root user
USER app

# -----------------------------------------
# Expose + start server
# -----------------------------------------
EXPOSE 3000

CMD ["npm", "start"]
